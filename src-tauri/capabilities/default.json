{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "默认权限配置",
  "windows": ["main", "screen_*"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "core:window:allow-set-position",
    "core:window:allow-close",
    "core:window:allow-destroy",
    "opener:default",
    "dialog:default",
    "log:default",
    "fs:default",
    "fs:allow-copy-file",
    "fs:allow-read",
    "fs:allow-write",
    {
      "identifier": "fs:allow-write-file",
      "allow": [{ "path": "$DESKTOP/**" }, { "path": "$DOCUMENT/**" }, { "path": "$DOWNLOAD/**" }]
    }
  ]
}
